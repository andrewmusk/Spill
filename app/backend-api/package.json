{
    "name": "spill-backend",
    "version": "1.0.0",
    "type": "module",
    "main": "src/server.ts",
    "scripts": {
        "start": "tsx src/server.ts",
        "dev": "tsx watch src/server.ts",
        "build": "tsc",
        "test": "vitest",
        "test:run": "vitest run",
        "test:coverage": "vitest run --coverage",
        "test:auth": "vitest run src/tests/auth/",
        "test:security": "vitest run src/tests/security/",
        "test:performance": "vitest run src/tests/performance/",
        "test:health": "vitest run src/tests/health/",
        "test:validations": "vitest run src/tests/validations/",
        "test:integration": "vitest run src/tests/auth/auth.integration.test.ts",
        "test:production": "npm run test:security && npm run test:performance && npm run test:health",
        "golden-path": "tsx scripts/golden-path.js",
        "verify-admin-setup": "tsx scripts/verify-admin-setup.js",
        "setup-admin-env": "tsx scripts/setup-admin-env.js",
        "seed": "tsx prisma/seed.js"
    },
    "dependencies": {
        "@clerk/express": "^1.7.14",
        "@clerk/nextjs": "^6.36.2",
        "@google-cloud/cloud-sql-connector": "^1.8.2",
        "@prisma/client": "^6.12.0",
        "dotenv": "^17.2.3",
        "express": "^4.19.2",
        "pg": "^8.11.3",
        "pino": "^9.7.0",
        "pino-http": "^10.5.0",
        "zod": "^4.0.10"
    },
    "devDependencies": {
        "@types/express": "^5.0.3",
        "@types/node": "^24.1.0",
        "@types/supertest": "^6.0.3",
        "@vitest/coverage-v8": "^3.2.4",
        "pino-pretty": "^13.0.0",
        "prisma": "^6.12.0",
        "supertest": "^7.1.4",
        "testcontainers": "^11.4.0",
        "tsx": "^4.20.3",
        "typescript": "^5.8.3",
        "vitest": "^3.2.4"
    }
}
